{
	"compilerOptions": {
		"incremental": false,
		"target": "ES6",
		"module": "Node16",
		"rootDir": "./src",
		"declaration": true,
		"sourceMap": true,
		"outDir": "./dist",
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"noEmitHelpers": true,
		"importHelpers": true
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["./dist"]
}
